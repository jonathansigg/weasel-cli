{
	"name": "weasel-cli",
	"bin": {
		"weasel": "./dist/index.js"
	},
	"version": "1.2.5",
	"description": "Create custom commands",
	"main": "index.js",
	"type": "module",
	"module": "dist/index.mjs",
	"types": "dist/index.d.ts",
	"files": [
		"dist"
	],
	"publishConfig": {
		"registry": "https://npm.pkg.github.com/@jonathansigg",
		"access": "public",
		"tag": "latest"
	},
	"scripts": {
		"build": "tsup",
		"dev": "tsup --watch",
		"test": "vitest run",
		"test:watch": "vitest",
		"link-cli": "pnpm unlink && pnpm link",
		"weasel": "node ./dist/index.js",
		"release": "standard-version && git push --follow-tags origin main"
	},
	"keywords": [
		"scripts",
		"cli",
		"weasel"
	],
	"author": "Jonathan Sigg",
	"license": "GPL-3.0-only",
	"packageManager": "pnpm@10.10.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/jonathansigg/weasel-cli"
	},
	"homepage": "https://github.com/jonathansigg/weasel-cli",
	"devDependencies": {
		"@types/fs-extra": "^11.0.4",
		"@types/node": "^22.15.16",
		"standard-version": "^9.5.0",
		"tsup": "^8.4.0",
		"typescript": "^5.8.3",
		"vite-tsconfig-paths": "^5.1.4",
		"vitest": "^3.1.3"
	},
	"dependencies": {
		"@commander-js/extra-typings": "^13.1.0",
		"@inquirer/prompts": "^7.5.0",
		"chalk": "^5.4.1",
		"commander": "^13.1.0",
		"fs-extra": "^11.3.0",
		"mkdirp": "^3.0.1"
	}
}
